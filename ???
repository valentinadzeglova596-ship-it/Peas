    <script>
        function checkVideo() {
            const input = document.getElementById('ai-input').value;
            const responseBox = document.getElementById('ai-response');
            
            if (input.trim() === "") {
                alert("–í–≤–µ–¥–∏ –∑–∞–ø–∏—Ç –¥–ª—è –ø–µ—Ä–µ–≤—ñ—Ä–∫–∏!");
                return;
            }

            responseBox.classList.remove('hidden');
            responseBox.innerHTML = "<b>–ê–Ω–∞–ª—ñ–∑—É—é –∑–∞–ø–∏—Ç...</b>";

            setTimeout(() => {
                responseBox.innerHTML = `ü§ñ <b>–ú—ñ–π –≤–µ—Ä–¥–∏–∫—Ç:</b> –ó–∞–ø–∏—Ç "${input}" –æ–±—Ä–æ–±–ª–µ–Ω–æ. –¶–µ –≤—ñ–¥–µ–æ –±–µ–∑–ø–µ—á–Ω–µ —Ç–∞ –º—ñ—Å—Ç–∏—Ç—å 98% –∫–æ—Ä–∏—Å–Ω–æ–≥–æ –∫–æ–¥—É. –†–µ–∫–æ–º–µ–Ω–¥—É—é –¥–æ –ø–µ—Ä–µ–≥–ª—è–¥—É!`;
            }, 1000);
